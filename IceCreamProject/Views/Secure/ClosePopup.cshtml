@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Secure.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Closing...</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .spinner {
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-left-color: #4caf50;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>

</head>
<body>
    <div class="spinner"></div>
    <script>
        // Wait for a short moment and then close the popup
        setTimeout(function () {
            window.close();
        }, 1000); // 1 second delay
    </script>
</body>
</html>
