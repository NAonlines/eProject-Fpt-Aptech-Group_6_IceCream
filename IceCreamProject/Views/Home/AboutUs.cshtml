@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Frontend.cshtml";
}

<div class="hero overlay">
    <div class="img-bg rellax">
        <img src="~/Frontend/images/Ice_Cream_banner_wallpaper.jpg" alt="Image" class="img-fluid">
    </div>

    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-lg-5">
                <h1 class="heading" data-aos="fade-up">About Us</h1>
                <p class="mb-5" data-aos="fade-up">
                    Welcome to <strong>Ice Cream Delight</strong>, your go-to destination for premium, handcrafted ice creams made with love and the freshest ingredients. Every scoop we serve is a celebration of flavor and creativity, designed to bring smiles to all.
                </p>
                <p class="mb-5" data-aos="fade-up">
                    From timeless classics like creamy vanilla and rich chocolate to adventurous flavors like mango chili and pistachio rose, our creations are designed to suit every palate. Our journey began in a small family-owned kitchen, and today we proudly serve customers across multiple locations.
                </p>
                <p class="mb-5" data-aos="fade-up">
                    We believe in making moments sweeter, whether it’s a special occasion or just a simple treat. Join us to explore a world of frozen delights, and let us make your day extra special.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="section section-2">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 order-lg-2 mb-5 mb-lg-0">
                <div class="image-stack mb-5 mb-lg-0">
                    <div class="image-stack__item image-stack__item--bottom" data-aos="fade-up">
                        <img src="~/Frontend/images/About-1.jpg" alt="Ice Cream Shop" class="img-fluid rellax ">
                    </div>
                    <div class="image-stack__item image-stack__item--top" data-aos="fade-up" data-aos-delay="100" data-rellax-percentage="0.5">
                        <img src="~/Frontend/images/About-2.jpg" alt="Ice Cream Varieties" class="img-fluid">
                    </div>
                </div>
            </div>
            <div class="col-lg-4 order-lg-1">
                <div>
                    <h2 class="heading mb-3" data-aos="fade-up" data-aos-delay="100">Our Promise</h2>
                    <p data-aos="fade-up" data-aos-delay="200">
                        At Ice Cream Delight, we promise quality, freshness, and innovation in every scoop. Whether you’re a fan of fruity sorbets or indulgent creamy flavors, we have something special for you.
                    </p>
                    <p data-aos="fade-up" data-aos-delay="300">
                        We are committed to using ethically sourced ingredients and ensuring our treats bring happiness to you and your loved ones.
                    </p>
                    <p class="my-4" data-aos="fade-up" data-aos-delay="300">
                        <a href="#" class="btn btn-primary">Learn More</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section service-section-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-4 mb-lg-0">
                <div class="heading-content" data-aos="fade-up">
                    <h2>Our <span class="d-block">Philosophy</span></h2>
                    <p>We believe that every scoop has a story. Our philosophy is to combine tradition and creativity to bring you the best ice cream experience.</p>
                    <p class="my-4" data-aos="fade-up" data-aos-delay="300">
                        <a href="#" class="btn btn-primary">Explore More</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-6 col-md-6 col-lg-3 mb-4 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-1">
                            <span class="icon">
                                <img src="~/Frontend/images/ice-cream-cone.png" alt="Ingredients" class="img-fluid">
                            </span>
                            <div>
                                <h3>Fresh Ingredients</h3>
                                <p>We source only the finest ingredients to ensure the highest quality in every batch.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6 col-lg-3 mb-4 mb-lg-0" data-aos="fade-up" data-aos-delay="200">
                        <div class="service-1">
                            <span class="icon">
                                <img src="~/Frontend/images/1791076.png" alt="Creative Flavors" class="img-fluid">
                            </span>
                            <div>
                                <h3>Creative Flavors</h3>
                                <p>From classics to innovative combinations, we have something to excite every taste bud.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6 col-lg-3 mb-4 mb-lg-0" data-aos="fade-up" data-aos-delay="300">
                        <div class="service-1">
                            <span class="icon">
                                <img src="~/Frontend/images/menu.png" alt="Community" class="img-fluid">
                            </span>
                            <div>
                                <h3>Community</h3>
                                <p>We cherish our community of ice cream lovers and aim to create a welcoming environment for all.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-6 col-lg-3 mb-4 mb-lg-0" data-aos="fade-up" data-aos-delay="400">
                        <div class="service-1">
                            <span class="icon">
                                <img src="~/Frontend/images/book.png" alt="Sustainability" class="img-fluid">
                            </span>
                            <div>
                                <h3>Sustainability</h3>
                                <p>We are committed to sustainable practices to ensure a brighter future for generations to come.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

