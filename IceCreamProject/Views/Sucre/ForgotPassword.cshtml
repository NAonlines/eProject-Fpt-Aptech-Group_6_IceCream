@model IceCreamProject.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Secure.cshtml";
}


<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card card-custom">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/Frontend/images/Login_ice_cream.jpg" alt="forgot password" class="img-fluid custom-image" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-action="ForgotPassword" method="post" novalidate>
                                    @Html.AntiForgeryToken()
                                  
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3 custom-icon"></i>
                                        <span class="h1 fw-bold mb-0">Forgot Password</span>
                                    </div>
                                    <h5 class="fw-normal mb-3 pb-3">Enter your email to reset your password</h5>

                                    <!-- Email -->
                                    <div class="form-floating mb-4">
                                        <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Email address" />
                                        <label for="Email">Email address</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                   
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">Send Reset Link</button>
                                        <a asp-route="Login" class="btn btn-dark btn-lg btn-block">Cancel</a>
                                    </div>

                                    <a href="@Url.Action("Login", "Sucre")" class="small text-muted">Back to Login</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
