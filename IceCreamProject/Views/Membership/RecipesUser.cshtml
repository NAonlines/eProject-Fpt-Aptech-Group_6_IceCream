@model IEnumerable<IceCreamProject.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
    Layout = "~/Views/Frontend.cshtml";
}
<style>
    .text-truncate {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

</style>
<div class="hero overlay">
    <div class="img-bg rellax">
        <img src="~/Frontend/images/banner-1.jpg" alt="Image" class="img-fluid">
    </div>

    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-lg-5">
                <h1 class="heading" data-aos="fade-up">Unleash Your Inner Chef with  Recipes!</h1>
                <p class="mb-5" data-aos="fade-up">Whip up delicious ice cream creations with our easy-to-follow, recipes. Sweeten your day, one scoop at a time!</p>
            </div>
        </div>

    </div>
</div>

<div class="section section-2">
    <section class="pb-5">
        <div class="container-lg">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-header d-flex flex-wrap justify-content-between my-4">
                        <h2 class="section-title">Recipes List</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 row-cols-xxl-5 gap-4">

                        @foreach (var recipe in Model)
                        {
                            <div class="col">
                                <div class="product-item" style="border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
                                    <figure style="position: relative; padding-top: 100%; overflow: hidden;">
                                        <a href="@Url.Action("RecipeDetails", "Home", new { id = recipe.RecipeId })" title="@recipe.Name">
                                            <img src="@(string.IsNullOrEmpty(recipe.ImageUrl) ? "/ImageUrl/default-recipe.jpg" : "/ImageUrl/" + recipe.ImageUrl)"
                                                 alt="@recipe.Name"
                                                 style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;" />
                                        </a>
                                    </figure>
                                    <div class="d-flex flex-column text-center p-3">
                                        <h3 class="fs-6 fw-normal text-truncate" style="max-width: 150px; overflow: hidden; white-space: nowrap; margin: 0 auto;">
                                            @recipe.Name
                                        </h3>
                                        <p class="text-muted small mb-1">
                                            Category: @(recipe.Category?.Name ?? "Uncategorized")
                                        </p>
                                        <p class="text-muted small mb-2 text-truncate" style="max-width: 150px;">
                                            Book: @(recipe.Book?.Title ?? "No Book")
                                        </p>

                                        <div class="button-area p-3 pt-0">
                                            <a href="@Url.Action("RecipeDetails", "Home", new { id = recipe.RecipeId })" class="btn btn-primary rounded-1 p-2 fs-7">
                                                View Recipe
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
