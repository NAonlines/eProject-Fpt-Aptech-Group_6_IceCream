@model List<IceCreamProject.Models.MemberPrice>

@{
    ViewData["Title"] = "List Price";
    Layout = "~/Areas/System/Views/backend.cshtml";
    var count = 1;
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Price List</h3>
        </div>


        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#addModal" class="btn btn-sm btn-outline-success">Add Price</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover" id="dataTables-example" width="100%">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Name Price</th>
                                    <th>Type Price</th>
                                    <th>Price</th>
                                    <th>Create Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(count++)</td>
                                        <td>@item.NamePrice</td>
                                        <td>@item.Duration</td>
                                        <td>
                                            @item.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))
                                            
                                        </td>
                                        <td>
                                            @item.CreateDate.ToString("hh:mm dd/MM/yyyy")
                                            </td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary" href="/system/get-price/@item.IDMemberShipPrice">Edit</a>
                                            <a class="btn btn-sm btn-outline-danger remove-price" data-id="@item.IDMemberShipPrice" >
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Add Price</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="mb-3">
                            <label for="NameCategory">Price Type</label>
                            <select class="form-control" name="Duration" id="durationSelect">
                                <option value="1 day">1 day</option>
                                <option value="1 month">1 month</option>
                                <option value="1 year">1 year</option>
                            </select>


                        </div>
                        <div class="mb-3">
                            <label for="ShortDecription">
                                Name Price
                            </label>
                            <input type="text" class="form-control" placeholder="Name Price" name="NamePrice" id="namePrice" />

                        </div>
                        <div class="mb-3">
                            <label for="NameCategory">Price</label>
                            <input type="number" class="form-control mb-2" placeholder="Price" name="Price" id="priceInput" />
                            <span id="formattedPrice" class="text-success mt-2"></span>
                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submitButton">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   <script src="~/backend/assets/js/membership/add.js"></script>
}