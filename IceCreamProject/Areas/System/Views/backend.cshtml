        text-align: center;
    }

        .popup.hidden {
            display: none;
        }

        .popup .text-success {
            color: #28a745;
            font-weight: bold;
        }

        .popup .text-danger {
            color: #dc3545;
            font-weight: bold;
        }

    #closePopup {
        margin-top: 15px;
