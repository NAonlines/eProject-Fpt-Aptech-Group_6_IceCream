@model IceCreamProject.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Create Book";
    Layout = "~/Areas/System/Views/backend.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Create New Book</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">Book Information</div>
                    <div class="card-body">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="mb-3 row">
                                <label class="col-sm-2">Title</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-2">Description</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-2">Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-2">Image</label>
                                <div class="col-sm-10">
                                    <input asp-for="ImageUrl" type="file" class="form-control" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label class="col-sm-2">Category</label>
                                <div class="col-sm-10">
                                    <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <div class="col-sm-4 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Create
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
