@model IceCreamProject.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Create book";
    Layout = "~/Areas/System/Views/backend.cshtml";
}

<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Forms</h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">Book List</div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <form asp-action="Create" method="post" novalidate enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="textdanger"></div>@* chỉ hiển thị lỗi liên quan model *@

                            <div class="mb-3 row">
                                <label class="col-sm-2">Title</label>
                                <div class="col-sm-10">
                                    <input asp-for="Title" class="form-control" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />

                            <div class="mb-3 row">
                                <label class="col-sm-2">Description</label>
                                <div class="col-sm-10">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />

                            <div class="mb-3 row">
                                <label class="col-sm-2">Price</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />

                            <div class="mb-3 row">
                                <label class="col-sm-2">Image</label>
                                <div class="col-sm-10">
                                    <input asp-for="ImageUrl" type="file" class="form-control" />
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />


                            <div class="mb-3 row">
                            <label class="col-sm-2">Parent</label>
                            <div class="col-sm-10">
                                <select asp-for="Categories" class="form-control"
                                            asp-items="Model.Categories">
                                    <option value="">-- Select Parent --</option>
                                </select>
                                    <span asp-validation-for="Categories" class="text-danger"></span>
                            </div>
                            <div class="line"></div>
                            <br />


                            <div class="mb-3 row">
                                <label class="col-sm-2">Recipe</label>
                                <div class="col-sm-10">
                                    <input asp-for="Recipe" class="form-control" />
                                    <span asp-validation-for="Recipe" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="line"></div>
                            <br />

                            <div class="mb-3 row">
                                <div class="col-sm-4 offset-sm-2">
                                    <button type="submit" class="btn btn-primary mb2">
                                        <i class="fas fa-save"></i> Create
                                    </button>
                                    <a asp-action="index" class="btn btn-secondary mb2">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

